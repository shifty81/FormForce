{
  "name": "formforce",
  "version": "1.0.0",
  "description": "AI Form Builder - Mobile forms for any device. A mobile and web-based forms solution with dispatching and inventory tracking",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "build:all": "npm run build && npm run build:server",
    "build:server": "echo 'Server uses Node.js runtime - no build step needed'",
    "install-all": "npm install && cd client && npm install",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:server": "jest",
    "test:client": "cd client && npm test",
    "test:all": "npm run test:server && npm run test:client"
  },
  "keywords": [
    "forms",
    "mobile",
    "dispatching",
    "inventory",
    "UETA",
    "electronic-signatures"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.3",
    "socket.io": "^4.6.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "concurrently": "^8.2.0",
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/node_modules/**",
      "!server/**/*.test.js"
    ],
    "testMatch": [
      "**/server/**/*.test.js"
    ]
  }
}
